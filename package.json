{
  "name": "algo_webapp",
  "version": "0.1.0",
  "private": true,
  "homepage": "/",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@shadcn/ui": "^0.0.4",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/ws": "^8.18.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",

    "react-scripts": "^5.0.1",
    "shadcn-ui": "^0.9.4",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^2.1.4",
    "ws": "^8.18.2"
  },
  "scripts": {
    "start": "HOST=0.0.0.0 react-scripts start",
    "start:dev": "NODE_ENV=development REACT_APP_DOCKER=false HOST=0.0.0.0 react-scripts start",
    "start:docker": "NODE_ENV=production REACT_APP_DOCKER=true react-scripts start",
    "build": "NODE_OPTIONS='--openssl-legacy-provider' react-app-rewired build",
    "build:dev": "NODE_ENV=development REACT_APP_DOCKER=false npm run build",
    "build:docker": "NODE_ENV=production REACT_APP_DOCKER=true npm run build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "docker:build": "docker build -t algo-trading-frontend .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t algo-trading-frontend:dev .",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:home": "docker compose -f docker-compose.dev.home.yml up --build",
    "docker:prod": "docker compose up -d --build",
    "docker:home": "docker compose -f docker-compose.home.yml up -d --build",
    "docker:stop": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "deploy:home": "./deploy.sh home start",
    "deploy:cloud": "./deploy.sh cloud start",
    "deploy:stop": "./deploy.sh home stop"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "@types/sqlite3": "^3.1.11",
    "autoprefixer": "^10.4.21",
    "customize-cra": "^1.0.0",
    "postcss": "^8.5.3",
    "react-app-rewired": "^2.2.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^4.9.5"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  }
}
